    "test": "mocha --opts ./mocha.opts",
    "test:watch": "mocha --opts ./mocha.opts --watch-extensions ts --watch",
    "coverage": "nyc npm run test"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
