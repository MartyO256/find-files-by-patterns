{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "target": "es2018",
    "strict": true,
    "outDir": "./../lib",
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "typeRoots": ["./../node_modules/@types"],
    "noImplicitAny": false,
    "rootDir": "./../src"
  },
  "include": ["./**/*.ts"]
}
