{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "outDir": "./lib",
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "./src",
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noImplicitAny": false,
    "downlevelIteration": true
  }
}
